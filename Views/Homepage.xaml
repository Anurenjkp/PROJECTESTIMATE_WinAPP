<Page x:Class="ProjectEstimationWinApp.Views.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Homepage">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Left" Margin="20">
            <TextBlock Text="Project Estimation" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <Border Style="{StaticResource FieldsetStyle}">
                <StackPanel>
                    <TextBlock Text="Project Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Project Name:" VerticalAlignment="Center" />
                        <TextBox x:Name="ProjectNameTextBox" Width="200" Margin="10,0,0,0" Grid.Column="1" />
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource FieldsetStyle}">
                <StackPanel>
                    <TextBlock Text="Select the Project Type" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    <RadioButton GroupName="ProjectType" Content="Small (Hours Range – 100 to 200)" Tag="Small" IsChecked="True" />
                    <RadioButton GroupName="ProjectType" Content="Medium (Hours Range – 200 to 500)" Tag="Medium" />
                    <RadioButton GroupName="ProjectType" Content="Large (Hours Range – greater than 500)" Tag="Large" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource FieldsetStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Select the Project Complexity" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
                    <RadioButton GroupName="Complexity" Content="Low" Tag="Low" IsChecked="True" />
                    <RadioButton GroupName="Complexity" Content="Medium" Tag="Medium" />
                    <RadioButton GroupName="Complexity" Content="High" Tag="High" />
                </StackPanel>
            </Border>

            <Button Content="Continue" Width="100" Margin="0,20,0,0" Style="{StaticResource ContinueButtonStyle}" Click="ContinueButton_Click" />
        </StackPanel>
    </ScrollViewer>
</Page>